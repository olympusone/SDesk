<%= header_btn(t("companies.edit.title"), edit_company_path(@company)) if can?(:update, Company) %>

<div class="card">
  <form class="card-body form-horizontal">
    <div class="form-group row">
      <label class="col-sm-4 col-md-3 col-lg-2 text-sm-right control-label"><%=t 'activerecord.attributes.company.name' %>:</label>
      <div class="col-sm-8 col-md-9 col-lg-10">
        <p class="form-control-static"><%= @company.name %></p>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-4 col-md-3 col-lg-2 text-sm-right control-label"><%=t 'activerecord.attributes.company.domain' %>:</label>
      <div class="col-sm-8 col-md-9 col-lg-10">
        <p class="form-control-static"><%= link_to @company.domain, @company.domain, target: :blank if @company.domain? %></p>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-4 col-md-3 col-lg-2 text-sm-right control-label"><%=t 'activerecord.attributes.company.address' %>:</label>
      <div class="col-sm-8 col-md-9 col-lg-10">
        <p class="form-control-static"><%= @company.address %></p>
      </div>
    </div>

    <hr>

    <div class="form-group row">
      <label class="col-sm-4 col-md-3 col-lg-2 text-sm-right control-label"><%=t 'activerecord.attributes.company.notes' %>:</label>
      <div class="col-sm-8 col-md-9 col-lg-10">
        <p class="form-control-static"><%= @company.notes.try(:html_safe) %></p>
      </div>
    </div>
  </form>
</div>